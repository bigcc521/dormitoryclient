<form bindsubmit="formSubmit">
  <view class="page" data-weui-theme="{{theme}}">
    <view class="weui-form">
      <view class="weui-form__control-area">
        <view class="weui-cells__group weui-cells__group_form">
          <view class="weui-cells__title">教师登录</view>
          <view class="weui-cells weui-cells_form">
            <view class="weui-cell weui-cell_active">
              <view class="weui-cell__hd"><label class="weui-label">教工号</label></view>
              <view class="weui-cell__bd">
                <input class="weui-input" placeholder="填写门户网站教工号" name="usernumber" placeholder-class="weui-input__placeholder" />
              </view>
            </view>
            <view class="weui-cell weui-cell_active">
              <view class="weui-cell__hd">							
                              <label class="weui-label">密码</label>
                          </view>
              <view class="weui-cell__bd">
                <input class="weui-input" password="false" placeholder="填写门户网站密码" name="password" placeholder-class="weui-input__placeholder" />
              </view>
            </view>
            <view class="weui-btn_cell weui-btn_cell-warn">{{loginerr}}</view>
          </view>
        </view>
      </view>
      
      <view class="weui-form__opr-area">
       <button form-type="submit" class="weui-btn weui-btn_primary">登录</button>
      </view>
    </view>
  </view>
</form>